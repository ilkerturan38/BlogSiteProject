
<form action="#" class="p-5 bg-white" method="post">


    <div class="row form-group">
        <div class="col-md-12">
            <label class="text-black" for="fname">First Name</label>
            <input type="text" id="fname" name="NameSurname" class="form-control">
        </div>
    </div>

    <div class="row form-group">

        <div class="col-md-12">
            <label class="text-black" for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control">
        </div>
    </div>

    <div class="row form-group">

        <div class="col-md-12">
            <label class="text-black" for="subject">Subject</label>
            <input type="text" id="subject" name="subject" class="form-control">
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-12">
            <label class="text-black" for="message">Message</label>
            <textarea id="message" name="message" cols="30" rows="7" class="form-control" placeholder="Write your notes or questions here..."></textarea>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-12">
            <input type="submit" value="Mesajı Gönder" class="btn btn-primary py-2 px-4 text-white">
        </div>
    </div>


</form>
