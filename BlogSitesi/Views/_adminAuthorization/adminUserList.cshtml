@model IEnumerable<Entity.ConCrete.Admin>
@{
    ViewBag.Title = "adminUserList";
    Layout = "~/Views/Shared/AdminTemplate.cshtml";
}

<div class="container">
    <table class="table table-dark table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Password</th>
                <th>Authorization</th>
                <th>Düzenle</th>
                <th>Durum Aktif</th>
                <th>Durum Pasif</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.adminID</td>
                    <td>@item.username</td>
                    <td>@item.password</td>
                    <td>@item.adminRole</td>
                    <td><a href="/_adminAuthorization/adminUserUpdate/@item.adminID" class="btn btn-primary">Düzenle</a></td>
                    <td><a href="/_adminAuthorization/StatusUpdateTrue/@item.adminID" class="btn btn-success">Aktif Yap</a></td>
                    <td><a href="/_adminAuthorization/StatusUpdateFalse/@item.adminID" class="btn btn-light">Pasif Yap</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/_adminAuthorization/adminUserInsert/" class="btn btn-outline-secondary">Yeni Admin Ekle</a>
</div>


