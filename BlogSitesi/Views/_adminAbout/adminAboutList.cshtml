@model IEnumerable<Entity.ConCrete.About>
@{
    ViewBag.Title = "adminAboutList";
    Layout = "~/Views/Shared/AdminTemplate.cshtml";
}

<!DOCTYPE html>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<html>

<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <div class="row">


            <div class="col-md-12">

                <div class="card card-primary">

                    <div class="card-header">

                        <h3 class="card-title">Hakkımızda Sayfası Düzenlemesi</h3>

                        <div class="card-tools">

                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                                <i class="fas fa-minus"></i>

                            </button>

                        </div>

                    </div>


                    @using (Html.BeginForm("Update", "_adminAbout", FormMethod.Post))
                    {
                        <div class="card-body">
                            @foreach (var item in Model)
                            {

                                <div class="form-group">

                                    <label for="inputName">ID</label>

                                    <input type="text" name="aboutID" class="form-control" value="@item.aboutID">

                                </div>

                                <div class="form-group">

                                    <label for="inputName">Görsel 1</label>

                                    <input type="text" name="ImageURL1" class="form-control" value="@item.ImageURL1">

                                </div>


                                <div class="form-group">

                                    <label for="inputName">Görsel 2</label>

                                    <input type="text" name="ImageURL2" class="form-control" value="@item.ImageURL2">

                                </div>

                                <div class="form-group">

                                    <label for="inputDescription">Açıklama 1</label>

                                    <textarea name="Content1" class="form-control" rows="4">@item.Content1</textarea>

                                </div>

                                <div class="form-group">

                                    <label for="inputDescription">Açıklama 2</label>

                                    <textarea name="Content2" class="form-control" rows="4">@item.Content2</textarea>

                                </div>

                                <button type="submit" class="btn btn-secondary">Güncelle</button>
                            }
                        </div>
                    }

                    <!-- /.card-body -->
                    @if (ViewBag.uyari != null)
                    {
                        <div class="alert-warning animate__animated animate__fadeInLeft">
                            <strong>@ViewBag.uyari</strong>
                        </div>
                    }
                </div>

                <!-- /.card -->

            </div>

        </div>

    </section>

</body>

</html>

