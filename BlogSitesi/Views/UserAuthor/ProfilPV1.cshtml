@model Entity.ConCrete.Author

<div class="tab-pane" id="settings">

    @using (Html.BeginForm("UpdateAuthorProfil", "UserAuthor", FormMethod.Post))
    {

        <div class="form-group row">

            <div class="col-sm-10">

                <input type="hidden" class="form-control" name="authorID" value="@Model.authorID">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Ad-Soyad</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputName" name="authorNameSurname" value="@Model.authorNameSurname">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>

            <div class="col-sm-10">

                <input type="email" class="form-control" id="inputEmail" name="email" value="@Model.email">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills" name="password" value="@Model.password">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre Tekrar</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputName2" name="authorTitle" value="@Model.authorTitle">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Yetenekler</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputName2" name="authorShort" value="@Model.authorShort">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Telefon</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills" name="phoneNumber" value="@Model.phoneNumber">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda</label>

            <div class="col-sm-10">

                <textarea class="form-control" id="inputSkills" aria-describedby="editor" rows="5" name="about">@Model.about</textarea>

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Fotoğraf</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" id="inputSkills" name="imageURL" value="@Model.imageURL">

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <div class="checkbox">

                    <label>

                        <input type="checkbox"> I agree to the <a href="#">terms and conditions</a>

                    </label>

                </div>

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-danger">Güncelle</button>

            </div>

        </div>
    }
</div>
