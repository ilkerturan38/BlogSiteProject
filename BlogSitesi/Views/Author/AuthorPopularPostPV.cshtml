@model IEnumerable<Entity.ConCrete.Blog>
<div class="sidebar-box">
    <h3 class="heading">Yazarın Tüm Blog Yazıları</h3>
    <div class="post-entry-sidebar">
        <ul>
            <li>
                @foreach (var item in Model)
                { 
                    <a href="/Blog/BlogDetails/@item.blogID">
                    <img src="@item.ImageURL" alt="Image placeholder" class="mr-4">
                    <div class="text">
                        <h4>@item.Title</h4>
                        <div class="post-meta">
                            <span class="mr-2">@(((DateTime)item.Date).ToString("dd MMM yyyy"))</span>
                        </div>
                    </div>
                    </a>
                }
            </li>
        </ul>
    </div>
</div>

