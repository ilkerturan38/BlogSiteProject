@model IEnumerable<Entity.ConCrete.Blog>
<div class="sidebar-box"> <!--BlogDetay Sayfasındaki BlogID'ye göre Bloğu Yazan,Yazarın bilgileri getirilcek.-->
    <div class="bio text-center">
        @foreach (var item in Model)
        {
            <img src="@item.Author.imageURL" alt="Image Placeholder" class="img-fluid mb-5">
                            <div class="bio-body">
                                <h2>@item.Author.authorNameSurname</h2>
                                <p class="mb-4">@item.Author.about</p>
                                @*<p><a href="#" class="btn btn-primary btn-sm rounded px-4 py-2">Read my bio</a></p>*@
                                <p class="social">
                                    <a href="#" class="p-2"><span class="fa fa-facebook"></span></a>
                                    <a href="#" class="p-2"><span class="fa fa-twitter"></span></a>
                                    <a href="#" class="p-2"><span class="fa fa-instagram"></span></a>
                                    <a href="#" class="p-2"><span class="fa fa-youtube-play"></span></a>
                                </p>
                            </div>
         }

    </div>
</div>
