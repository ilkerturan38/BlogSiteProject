@model IEnumerable<Entity.ConCrete.Comment>
@{
    ViewBag.Title = "GetCommentByBlog";
    Layout = "~/Views/Shared/AdminTemplate.cshtml";
}

<h2>Bloğa Ait Yorumlar</h2>

<div class="wrapper">

    <section class="content">
        <div class="container-fluid">


            <div class="row">
                <div class="col-md-12">

                    <div class="timeline">
                        @foreach (var item in Model)
                        {

                            <div class="time-label">
                                <span class="bg-success">@item.CommentDate.ToShortDateString()</span>
                            </div>

                            <div>
                                <i class="fas fa-envelope bg-blue"></i>
                                <div class="timeline-item">
                                    <h3 class="timeline-header"><a href="#">@item.NameSurname</a> @item.email</h3>

                                    <div class="timeline-body">
                                        @item.commentText
                                    </div>
                                    @*<div class="timeline-footer">
                                            <a class="btn btn-primary btn-sm">Detaylar</a>
                                            <a class="btn btn-danger btn-sm">Kaldır</a>
                                        </div>*@
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>

    </section>
</div>


