@model IEnumerable<Entity.ConCrete.Comment>
@{
    ViewBag.Title = "CommentStatusTrueList";
    Layout = "~/Views/Shared/AdminTemplate.cshtml";
}

<h3>Onaysız Yorumlar</h3>
<hr />

<section class="content">

    <div class="container-fluid">

        <div class="row">

            <div class="card-body">

                <!-- Post -->

                @foreach (var item in Model)
                {

                    <div class="post">

                        <div class="user-block">

                            <img class="img-circle img-bordered-sm" src="https://www.clipartmax.com/png/full/62-622164_client-image-user-icon-png.png" alt="user image">

                            <span class="username">

                                <a href="#">@item.NameSurname</a>

                                <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

                                <a href="/Comment/UpdateStatusTrue/@item.commentID" class="float-right btn-tool">Yorumu Onayla</a>

                            </span>

                            <span class="description">@(((DateTime)item.CommentDate).ToString("dd MMM yyyy"))</span>

                        </div>

                        <!-- /.user-block -->

                        <p>

                            @item.commentText

                        </p>

                        <p>

                            <span class="float-right">

                                <a href="#" class="link-black text-sm">

                                    <i class="far fa-comments mr-1"></i> Yorumu Kaldır

                                </a>

                            </span>
                            <br />
                        </p>

                    </div>
                }

            </div>

        </div>

    </div>

</section>


